<?xml version="1.0" encoding="UTF-8"?>

<!-- Body element, don't touch -->
<skin xmlns="http://www.shareaza.com/schemas/Skin.xsd" version="1.0">

<!-- Manifest -->
<manifest	name="BlueStreak (11)"
		author="RocketX"
		description="My Personal Design for all you Shareaza Fans! (Font Size 11)"
		link="http://www.shareaza.com/"
		version="1.1"
		type="Skin"
		/>

<fonts>
    <font name="System.Plain"  face="Verdana" size="11" weight="normal"/>
    <font name="System.Bold"   face="Verdana" size="11" weight="bold"/>
    <font name="Panel.Caption" face="Verdana" size="11" weight="bold"/>
</fonts>

<!-- Colour scheme -->
<colourScheme>
	<colour name="System.Base.Window"           value="F7F7F7"/>
	<colour name="System.Base.Midtone"          value="EEEEEE"/>
	<colour name="System.Base.Highlight"        value="B6C6DE"/>
	<colour name="System.Back.Normal"           value="F7F7F7"/>
	<colour name="System.Back.Selected"         value="AFC1DC"/>
	<colour name="System.Back.Checked"          value="CDD8E9"/>
	<colour name="System.Back.Checked.Selected" value="CDD8E9"/>
	<colour name="System.Margin"                value="FFFFFF"/>
	<colour name="System.Disabled"              value="909090"/>
	<colour name="System.Border"                value="7A98C5"/>
	<colour name="System.Shadow"                value="336699"/>
	<colour name="System.Text"                  value="000000"/>
	<colour name="System.Text.Selected"         value="000000"/>
	<colour name="Panel.Caption.Back"           value="8DAFCB"/>
	<colour name="Panel.Caption.Text"           value="FFFFFF"/>
	<colour name="Dialog.Back"                  value="EEEEEE"/>
	<colour name="TaskPanel.Back"               value="8DAFCB"/>
	<colour name="TaskBox.Caption.Back"         value="FFFFFF"/>
	<colour name="TaskBox.Caption.Text"         value="6282B7"/>
	<colour name="TaskBox.Primary.Back"         value="6282B7"/>
	<colour name="TaskBox.Primary.Text"         value="FFFFFF"/>
	<colour name="TaskBox.Caption.Hover"        value="000000"/>
	<colour name="TaskBox.Client"               value="F7F7F7"/>
</colourScheme>

<menus> 
	<menu name="CMainWnd.Tray">
		<item id="ID_TAB_HOME" text="_Home"/>
		<item id="ID_TAB_LIBRARY" text="_Library"/>
		<item id="ID_TAB_NETWORK" text="_Network"/>
		<item id="ID_TAB_TRANSFERS" text="_Transfers"/>
		<item id="ID_WINDOW_MONITOR" text="Show _Monitor"/>
		<separator/>
		<item id="ID_TAB_CONNECT" text="_Connect"/>
		<item id="ID_NETWORK_DISCONNECT" text="_Disconnect"/>
		<item id="ID_NETWORK_SEARCH" text="New _Search..."/>
		<separator/>
		<item id="ID_NETWORK_AUTO_CLOSE" text="Close _After Transfers"/>
		<item id="ID_NETWORK_EXIT" text="E_xit"/>
	</menu>
</menus>

<toolbars>
	<!-- Monitor window -->
	<toolbar name="CMonitorWnd">
		<button id="ID_TRAY_OPEN"/>
	</toolbar>
</toolbars>

<!-- Command bar watermarks -->
<watermarks>
	<watermark target="CCoolMenu" path="MenuWatermark.bmp"/>
</watermarks>

